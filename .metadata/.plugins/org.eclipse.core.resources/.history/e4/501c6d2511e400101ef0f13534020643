/* USER CODE BEGIN PV */
uint8_t tx_address[5] = {0xE7, 0xE7, 0xE7, 0xE7, 0xE7};
uint8_t tx_data[32];
float temperatura = 0.0f;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void delay_us(uint32_t us) {
    // Zakładając 72MHz: 1 us to 72 cykle.
    // Pętla while z dekrementacją i NOP zajmuje ok 4-5 cykli.
    // Dzielimy 72 przez 5, co daje mnożnik ok. 14-15.
    // Ustawiamy bezpieczniej, żeby nie było za szybko.

    us *= 12; // Zmień mnożnik z 72 na 12 lub 10
    while (us--) {
        __NOP();
    }
}
// Funkcje pomocnicze do zmiany kierunku pinu
void Set_Pin_Output(GPIO_TypeDef *GPIOx, uint16_t GPIO_Pin) {
    GPIO_InitTypeDef GPIO_InitStruct = {0};
    GPIO_InitStruct.Pin = GPIO_Pin;
    GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_OD;
    GPIO_InitStruct.Pull = GPIO_NOPULL;
    GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_HIGH;
    HAL_GPIO_Init(GPIOx, &GPIO_InitStruct);
}

void Set_Pin_Input(GPIO_TypeDef *GPIOx, uint16_t GPIO_Pin) {
    GPIO_InitTypeDef GPIO_InitStruct = {0};
    GPIO_InitStruct.Pin = GPIO_Pin;
    GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
    GPIO_InitStruct.Pull = GPIO_NOPULL;
    HAL_GPIO_Init(GPIOx, &GPIO_InitStruct);
}

// Konfiguracja pinu czujnika (PB0)
#define DS_PORT GPIOB
#define DS_PIN  GPIO_PIN_0

uint8_t DS18B20_Start(void) {
    uint8_t Response = 0;

    __disable_irq(); // <--- WYŁĄCZAMY PRZERWANIA

    Set_Pin_Output(DS_PORT, DS_PIN);
    HAL_GPIO_WritePin(DS_PORT, DS_PIN, 0);
    delay_us(480);

    Set_Pin_Input(DS_PORT, DS_PIN);
    delay_us(80);

    if (!HAL_GPIO_ReadPin(DS_PORT, DS_PIN)) Response = 1; else Response = 0;

    delay_us(400);

    __enable_irq(); // <--- WŁĄCZAMY Z POWROTEM

    return Response;
}

void DS18B20_Write(uint8_t data) {

    __disable_irq(); // <--- WYŁĄCZAMY PRZERWANIA

    Set_Pin_Output(DS_PORT, DS_PIN);
    for (int i = 0; i < 8; i++) {
        if ((data & (1 << i)) != 0) {
            Set_Pin_Output(DS_PORT, DS_PIN);
            HAL_GPIO_WritePin(DS_PORT, DS_PIN, 0);
            delay_us(1);
            Set_Pin_Input(DS_PORT, DS_PIN);
            delay_us(60);
        } else {
            Set_Pin_Output(DS_PORT, DS_PIN);
            HAL_GPIO_WritePin(DS_PORT, DS_PIN, 0);
            delay_us(60);
            Set_Pin_Input(DS_PORT, DS_PIN);
        }
    }

    __enable_irq(); // <--- WŁĄCZAMY Z POWROTEM
}

uint8_t DS18B20_Read(void) {
    uint8_t value = 0;

    __disable_irq(); // <--- WYŁĄCZAMY PRZERWANIA

    Set_Pin_Input(DS_PORT, DS_PIN);
    for (int i = 0; i < 8; i++) {
        Set_Pin_Output(DS_PORT, DS_PIN);
        HAL_GPIO_WritePin(DS_PORT, DS_PIN, 0);
        delay_us(2);

        Set_Pin_Input(DS_PORT, DS_PIN);
        delay_us(10);

        if (HAL_GPIO_ReadPin(DS_PORT, DS_PIN)) {
            value |= 1 << i;
        }
        delay_us(50);
    }

    __enable_irq(); // <--- WŁĄCZAMY Z POWROTEM

    return value;
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_TIM2_Init();
  /* USER CODE BEGIN 2 */
  // Inicjalizacja radia
    csn_high();
    ce_high(); // Albo low, zależy od stanu początkowego, bezpiecznie dać High
    HAL_Delay(5);

    nrf24_init();

    // Konfiguracja zgodna z Twoją biblioteką
    nrf24_tx_pwr(3);          // Max moc
    nrf24_data_rate(0);       // 1Mbps (zgodnie z enumem w Twojej lib: 0=_1mbps)
    nrf24_set_channel(81);    // Kanał
    nrf24_set_addr_width(5);

    nrf24_open_tx_pipe(tx_address); // Ustawienie adresu nadawczego

    // To jest nadajnik, więc nie słuchamy
    nrf24_stop_listen();
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  // 1. Odczyt Temperatury
	      temperatura = -99.0; // Wartość domyślna błędu

	      if(DS18B20_Start()) // Jeśli czujnik odpowie
	      {
	          HAL_Delay(1);
	          DS18B20_Write(0xCC); // Skip ROM
	          DS18B20_Write(0x44); // Convert T
	          HAL_Delay(750);      // Czekamy na przeliczenie

	          DS18B20_Start();
	          DS18B20_Write(0xCC);
	          DS18B20_Write(0xBE); // Read Scratchpad

	          uint8_t t_lsb = DS18B20_Read();
	          uint8_t t_msb = DS18B20_Read();

	          uint16_t t_raw = (t_msb << 8) | t_lsb;
	          temperatura = (float)t_raw / 16.0;
	      }

	      // 2. Formatowanie danych
	      memset(tx_data, 0, 32);
	      sprintf((char*)tx_data, "T: %.2f C", temperatura);

	      // 3. Wysłanie danych (używamy funkcji transmit z Twojego pliku)
	      // Zwraca 1 jeśli max_rt (błąd), 0 jeśli OK (ack received)
	      // Ale uwaga: nrf24_transmit w tej libce wysyła i sprawdza MAX_RT

	      if(nrf24_transmit(tx_data, 32) == 1)
	      {
	          // Błąd wysyłania (Max Retransmits reached)
	          // Możesz mignąć diodą na czerwono/szybko
	      }
	      else
	      {
	          // Sukces (ACK odebrany)
	          HAL_GPIO_TogglePin(GPIOC, GPIO_PIN_13); // Mignij LED
	      }

	      HAL_Delay(1000); // Wyślij raz na sekundę + czas konwersji
	    }
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSE;
  RCC_OscInitStruct.HSEState = RCC_HSE_ON;
  RCC_OscInitStruct.HSEPredivValue = RCC_HSE_PREDIV_DIV1;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSE;
  RCC_OscInitStruct.PLL.PLLMUL = RCC_PLL_MUL9;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

