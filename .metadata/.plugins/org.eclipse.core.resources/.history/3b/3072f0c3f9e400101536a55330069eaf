/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : Main program body
  ******************************************************************************
  */
/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "spi.h"
#include "tim.h"
#include "gpio.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include <string.h>
#include <stdio.h>
#include "NRF24.h"
#include "NRF24_reg_addresses.h"
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define DS_PORT GPIOB
#define DS_PIN  GPIO_PIN_0
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/

/* USER CODE BEGIN PV */
uint8_t tx_address[5] = {0xE7, 0xE7, 0xE7, 0xE7, 0xE7};
uint8_t tx_data[32];
float temperatura = 0.0f;

uint8_t Temp_byte1, Temp_byte2;
uint16_t TEMP;
uint8_t Presence = 0;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

// --- PRECYZYJNE OPÓŹNIENIE (DWT) ---
// To jest kluczowe dla DS18B20. Zwykła pętla while jest za mało dokładna.
void DWT_Init(void) {
    if (!(CoreDebug->DEMCR & CoreDebug_DEMCR_TRCENA_Msk)) {
        CoreDebug->DEMCR |= CoreDebug_DEMCR_TRCENA_Msk;
        DWT->CYCCNT = 0;
        DWT->CTRL |= DWT_CTRL_CYCCNTENA_Msk;
    }
}

void delay_us(uint32_t us) {
    uint32_t start_tick = DWT->CYCCNT;
    // SystemCoreClock to zmienna w Hz (np. 72000000). Dzielimy przez 1M, żeby mieć cykle na 1us.
    uint32_t delay_ticks = (SystemCoreClock / 1000000) * us;

    while ((DWT->CYCCNT - start_tick) < delay_ticks);
}

// --- OBSŁUGA DS18B20 (Bit-banging) ---

// Zmieniamy tryb pinu "w locie"
void Set_Pin_Output(GPIO_TypeDef *GPIOx, uint16_t GPIO_Pin) {
    GPIO_InitTypeDef GPIO_InitStruct = {0};
    GPIO_InitStruct.Pin = GPIO_Pin;
    GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP; // Push Pull jest pewniejszy przy ręcznym sterowaniu
    GPIO_InitStruct.Pull = GPIO_NOPULL;
    GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_HIGH;
    HAL_GPIO_Init(GPIOx, &GPIO_InitStruct);
}

void Set_Pin_Input(GPIO_TypeDef *GPIOx, uint16_t GPIO_Pin) {
    GPIO_InitTypeDef GPIO_InitStruct = {0};
    GPIO_InitStruct.Pin = GPIO_Pin;
    GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
    GPIO_InitStruct.Pull = GPIO_NOPULL; // Zakładamy zewnętrzny rezystor 4.7k
    HAL_GPIO_Init(GPIOx, &GPIO_InitStruct);
}

uint8_t DS18B20_Start(void) {
    uint8_t Response = 0;
    Set_Pin_Output(DS_PORT, DS_PIN);   // Pin jako wyjście
    HAL_GPIO_WritePin(DS_PORT, DS_PIN, 0); // Ściągnij do zera
    delay_us(480);                     // Czekaj min. 480us (Reset)

    Set_Pin_Input(DS_PORT, DS_PIN);    // Pin jako wejście (zwolnij linię)
    delay_us(80);                      // Czekaj na odpowiedź czujnika

    if (!HAL_GPIO_ReadPin(DS_PORT, DS_PIN)) {
        Response = 1; // Czujnik odpowiedział (ściągnął linię do 0)
    } else {
        Response = 0; // Brak czujnika (linia ciągle 1 przez pull-up)
    }
    delay_us(400); // Dokończ slot czasowy
    return Response;
}

void DS18B20_Write(uint8_t data) {
    Set_Pin_Output(DS_PORT, DS_PIN);
    for (int i = 0; i < 8; i++) {
        if ((data & (1 << i)) != 0) {  // Jeśli piszemy 1
            Set_Pin_Output(DS_PORT, DS_PIN);
            HAL_GPIO_WritePin(DS_PORT, DS_PIN, 0);
            delay_us(1); // Krótki impuls 0
            Set_Pin_Input(DS_PORT, DS_PIN); // Zwolnij linię
            delay_us(60); // Czekaj resztę czasu
        } else {  // Jeśli piszemy 0
            Set_Pin_Output(DS_PORT, DS_PIN);
            HAL_GPIO_WritePin(DS_PORT, DS_PIN, 0);
            delay_us(60); // Długi impuls 0
            Set_Pin_Input(DS_PORT, DS_PIN);
        }
    }
}

uint8_t DS18B20_Read(void) {
    uint8_t value = 0;
    for (int i = 0; i < 8; i++) {
        Set_Pin_Output(DS_PORT, DS_PIN);
        HAL_GPIO_WritePin(DS_PORT, DS_PIN, 0);
        delay_us(2); // Krótki impuls startu

        Set_Pin_Input(DS_PORT, DS_PIN); // Zwolnij linię, żeby czytać
        if (HAL_GPIO_ReadPin(DS_PORT, DS_PIN)) {
            value |= 1 << i; // Jeśli linia 1, zapisz bit
        }
        delay_us(60); // Czekaj do końca slotu
    }
    return value;
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* MCU Configuration--------------------------------------------------------*/
  HAL_Init();
  SystemClock_Config();

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_TIM2_Init(); // Zostawiamy, ale użyjemy DWT do opóźnień

  /* USER CODE BEGIN 2 */
  DWT_Init(); // Inicjalizacja precyzyjnego licznika czasu

  // --- INICJALIZACJA NRF24 (RAZ, PRZED PĘTLĄ!) ---
  csn_high();
  ce_high();
  HAL_Delay(5);

  nrf24_init();
  nrf24_tx_pwr(3);          // Max moc
  nrf24_data_rate(0);       // 1Mbps
  nrf24_set_channel(81);
  nrf24_set_addr_width(5);
  nrf24_open_tx_pipe(tx_address);
  nrf24_stop_listen();      // Tryb nadajnika
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
      // 1. Reset i sprawdzenie obecności
      Presence = DS18B20_Start();
      HAL_Delay(1);

      if (Presence) {
          // 2. Rozpocznij konwersję temperatury
          DS18B20_Write(0xCC); // Skip ROM (wszystkie czujniki)
          DS18B20_Write(0x44); // Convert T

          // 3. Czekaj na konwersję (DS18B20 potrzebuje ok. 750ms na 12 bitów)
          HAL_Delay(800);

          // 4. Odczytaj dane
          Presence = DS18B20_Start(); // Ponowny reset
          DS18B20_Write(0xCC);        // Skip ROM
          DS18B20_Write(0xBE);        // Read Scratchpad

          Temp_byte1 = DS18B20_Read(); // LSB
          Temp_byte2 = DS18B20_Read(); // MSB

          // 5. Przelicz na float
          TEMP = (Temp_byte2 << 8) | Temp_byte1;
          temperatura = (float)TEMP / 16.0;

          // 6. Wyślij przez NRF24
          // Pakujemy float do bufora (można prościej, ale sprintf jest czytelny)
          sprintf((char*)tx_data, "Temp: %.2f C", temperatura);
          nrf24_write(tx_data, 32);
      }
      else {
          // Jeśli czujnik nie odpowiada
          sprintf((char*)tx_data, "Error: No Sensor");
          nrf24_write(tx_data, 32);
          HAL_Delay(1000);
      }

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}
